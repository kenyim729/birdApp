<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FE9A36"
    android:orientation="vertical"
    tools:context=".HkCounting"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/menub"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="15dp"
            android:id="@+id/menu"/>
        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp" />
        <Button
            android:id="@+id/home"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/home"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="125dp" />
        <Button
            android:id="@+id/people"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/people"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="190dp" />
        <Button
            android:id="@+id/exit"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:background="@drawable/exit"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="255dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/logo"
        android:layout_marginHorizontal="50dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgw"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按下按鈕開始計算"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bgy"
            android:padding="35dp"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:id="@+id/player1"
                    android:background="@drawable/player1"
                    />

                <Button
                    android:id="@+id/player2"
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/player2"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/player3"
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="@drawable/player3"
                    />


                <Button
                    android:id="@+id/player4"
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="@drawable/player4"
                    android:layout_marginLeft="150dp"
                    />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <ImageButton
                android:id="@+id/recordPage"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/doneb"
                android:src="@drawable/reco"

                />
            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:id="@+id/finish"
                android:background="@drawable/doneb"
                android:text="結束這一局"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
